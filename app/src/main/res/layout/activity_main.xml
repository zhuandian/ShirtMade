<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="体型"
                android:textSize="16dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_shape_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="标准体" />

                <RadioButton
                    android:id="@+id/rb_shape_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肥胖体" />

                <RadioButton
                    android:id="@+id/rb_shape_thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="瘦形体" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="腹部"
                android:textSize="16dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_bian_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="扁腹" />

                <RadioButton
                    android:id="@+id/rb_tu_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="凸腹" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="肩"
                android:textSize="16dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_song_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="耸肩" />

                <RadioButton
                    android:id="@+id/rb_chui_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="垂肩" />

                <RadioButton
                    android:id="@+id/rb_bu_dui_cheng_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不对称肩" />

                <RadioButton
                    android:id="@+id/rb_qian_qing_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前倾肩" />
            </RadioGroup>
        </LinearLayout>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_ban_xing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/ban_xing"
            android:gravity="center" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/size" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/material" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/clothe_color" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_fit_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/fit_season" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/acs_occasion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/occasion" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>